<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.hiyoriaya.ygoapp.MainActivity"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:name="com.example.hiyoriaya.ygoapp.ListFragment"
            android:id="@+id/frgL"
            android:tag="listFragment"
            android:layout_weight="1" />
       <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:tag="contentFragment"
            android:name="com.example.hiyoriaya.ygoapp.ContentFragment"
            android:id="@+id/frgC"
            android:layout_weight="1" />
    </LinearLayout>
